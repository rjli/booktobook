.comment-container {
  margin: 0rpx 0rpx 40rpx;
  border-bottom: 1px solid #d9d9d9;
}

.comment-title {
  display: flex;
  flex-direction: row;
}

.user-avatar {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.comment-content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.comment-header {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.user-name {
  padding-right: 30rpx;
}

.comment-time {
  color: #666;
  margin-bottom: 10rpx;
}


.comment-detail{
  margin: -10rpx 10rpx 10rpx 120rpx;
  word-break:break-all;
}