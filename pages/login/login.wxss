.logo {
  padding-top: 180rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}

.info {
  text-align: center;
  margin-bottom: 150rpx;
}

.info image {
  width: 200rpx;
  height: 50rpx;
}

.logo-text {
  margin-top: 100rpx;
  font-size: 40rpx;
  text-align: center;
}

.btn-common {
  background-color: #1aad19;
  width: 80%;
  margin: 30rpx auto 30rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #fff;
}

